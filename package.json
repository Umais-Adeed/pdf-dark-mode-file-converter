{
  "name": "pdf-dark-mode-converter",
  "version": "1.0.0",
  "description": "Secure, Local & Private PDF Tool",
  "main": "main.js",
  "scripts": {
    "start": "electron .",
    "dist": "electron-builder",
    "dist:linux": "electron-builder --linux",
    "dist:win": "electron-builder --win"
  },
  "author": "Umais Adeed <umaisadeed910@gmail.com> (https://github.com/Umais-Adeed)",
  "homepage": "https://github.com/Umais-Adeed",
  "build": {
    "appId": "com.umaisadeed.pdfdarkmode",
    "productName": "PDF Dark Mode",
    "linux": {
      "target": [
        "AppImage",
        "rpm"
      ],
      "category": "Utility",
      "maintainer": "Umais Adeed <umaisadeed910@gmail.com>"
    },
    "win": {
      "target": "nsis"
    },
    "files": [
      "main.js",
      "index.html",
      "package.json",
      "libs/**/*",
      "css/**/*",
      "webfonts/**/*"
    ]
  },
  "devDependencies": {
    "electron": "^28.0.0",
    "electron-builder": "^24.9.0"
  }
}